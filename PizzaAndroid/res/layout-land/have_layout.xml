<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="294dp"
        android:layout_height="49dp"
        android:layout_x="227dp"
        android:layout_y="12dp" />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="231dp"
        android:layout_x="22dp"
        android:layout_y="22dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/TimeT3"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="Time:  "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/TimeText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp" >

            <TextView
                android:id="@+id/TypeT3"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="Type:  "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/TypeText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/AdressT3"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="Adress:  "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/AddressText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/Count3"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:text="Count:  "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/countText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/StatusT3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="-1dp"
                android:layout_y="8dp"
                android:text="Status:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="153dp"
                android:layout_y="0dp"
                android:checked="false"
                android:clickable="false"
                android:visibility="invisible" />
        </AbsoluteLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnExitH"
        android:layout_width="192dp"
        android:layout_height="73dp"
        android:layout_x="309dp"
        android:layout_y="170dp"
        android:background="@drawable/butmenu"
        android:text="Назад" />

</AbsoluteLayout>